{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "none",
      "bracketSpacing": true,
      "jsxBracketSameLine": false,
      "parser": "flow"
    }],
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-closing-tag-location": 0,
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "indent": 0,
    "no-tabs": 0,
    "no-shadow": 0,
    "no-console": 0,
    "comma-dangle": 0,
    "global-require": 0,
    "no-nested-ternary": 0,
    "object-curly-newline": 0,
    "react/require-default-props": 0,
    "arrow-parens": ["error", "as-needed"],
    "function-paren-newline": 0,
  }
}
